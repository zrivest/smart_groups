<h2>Metrics/Graphs</h2>
<h4 class="subheader"><%= Course.find(params[:course_id]).name %></h4>
<hr>

<br><br><br>
<h3 class="subheader"><%= "View Multiple Students" %></h3>

<%= form_tag ("/metrics"), method:"POST" do %>
  <table>
  <tr>
    <th>Select Chart</th>
    <th style="text-align:left;">Chart Description</th>
  </tr>

     <% @chart_types.each do |chart_type| %>
      <tr>
        <td style="text-align:center;"><%= check_box_tag 'chart_selections[]', chart_type[:type] -%></td>
        <td><%=chart_type[:type]%></td>
      </tr>

      <% end %>
      <tr>
        <td style="text-align:center;"><%= submit_tag "Submit", class: "small button success" %></td>
        <td</td>
      </tr>
  </table>
<% end %>




<br><br><br>

<h3 class="subheader"><%= "View An Individual Student" %></h3>
<table>
  <%  @course.students.each do |student| %>
    <tr>
      <td><%= link_to(student.name, student_profile_path(student.id)) -%></td>
    </tr>
  <% end %>
</table>






