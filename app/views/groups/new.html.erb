
<h3>The New Generation</h3>
<hr>




<table id="student_roster_table">
  <tr>
    <td style="text-align:center;"><h5>Student Roster</h5><hr></td>
  </tr>
  <%@students.each do |student|%>
  <tr>
    <td id="student_name_td"><li id="student_element_in_container"><%=student.first_name%> <%= student.last_name %></li></td>
  </tr>
<%end%>
</table>




<div id="option_box_container">
    <fieldset id="options_fieldset_box">
      <legend>Total Number of<br>Students per Group</legend>
      <%= form_for "group" , url: {action: "total_students_per_groups"} do |f| %>

        <li class"inline"><%= f.check_box :random %> <%= f.label "random" %></li>


        <li class"inline"><%= f.check_box :even_grade_distribution%> <%= f.label "even_grade_distribution" %></li>

        <%= f.label "Total # of students per group" %><%= f.text_field :total_students_per_groups %>

        <%= f.submit "Generate", class: "small button success", style: "float:right;" %>
      </fieldset>
    <% end %>

    <fieldset id="options_fieldset_box">
      <legend>Total Number<br>of Groups</legend>
      <%= form_for "group" , url: {action: "total_num_of_groups"} do |f| %>

        <li class"inline"><%= f.check_box :random  %> <%= f.label "random" %></li>

        <li class"inline"><%= f.check_box :even_grade_distribution%> <%= f.label "even_grade_distribution" %></li>

        <%= f.label "# of groups" %><%= f.text_field :total_num_of_groups %>

        <%= f.submit "Generate", class: "small button success", style: "float:right;" %>
      </fieldset>
    <% end %>
</div>
