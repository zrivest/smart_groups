<h3>Enter Your Students</h3>

<%= form_for 'users[students]', url: {action: "create"} do |f| %>
  <%= f.hidden_field :course, value: "#{@course.id}" %>

  <fieldset>
    <legend>Student Information</legend>

    <div class="row">
      <div class="large-4 columns">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, required: true %>
      </div>
      <div class="large-4 columns">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, required: true %>
      </div>
      <div class="large-4 columns">
        <%= f.label :assignment_name %>
        <%= f.text_field :assignment_name, required: true %>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="large-4 columns">
        <%= f.label :start_date %>
        <%= f.text_field :start_date, required: true %>
      </div>
      <div class="large-4 columns">
        <%= f.label :due_date %>
        <%= f.text_field :due_date, required: true %>
      </div>
      <div class="large-4 columns">
        <%= f.label :grade %>
        <%= f.text_field :grade, required: true %>
      </div>
    </div>

    <br>

    <div class="row">
      <%= f.submit "Add Student", class: "small button success", style: "float:right;width:150px;margin-right:15px" %>
      <%= link_to("Back to Course list", user_courses_path(params[:user_id]), class: "small button", style: "float:right;width:150px;margin-right:30px") %>
    </div>

  </fieldset>
<% end %>



